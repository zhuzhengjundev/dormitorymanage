<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="50dp"
        android:background="#1874CD">

        <ImageView
            android:id="@+id/mydataupdateActivity_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#333"
            android:text="资料修改"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/mydataupdateActivity_img"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/titleimg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="学号："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/mydataupdateActivity_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="10001"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="姓名："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/mydataupdateActivity_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="小明"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="性别："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/mydataupdateActivity_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="男"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="年龄："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/mydataupdateActivity_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="籍贯："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/mydataupdateActivity_nativeplace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="所在专业："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/mydataupdateActivity_major"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="爱好："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/mydataupdateActivity_hobby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="宿舍号："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/mydataupdateActivity_dormitoryid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="1-101"/>

            </LinearLayout>

            <TextView
                android:id="@+id/mydataupdateActivity_ok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="#fff"
                android:background="#EE3B3B"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>