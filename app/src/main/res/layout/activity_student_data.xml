<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="50dp"
        android:background="#1874CD">

        <ImageView
            android:id="@+id/studentDataActivity_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#333"
            android:text="详细资料"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/studentDataActivity_img"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/titleimg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="学号："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="10001"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="姓名："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="小明"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="性别："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="男"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="年龄："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="12"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="籍贯："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_nativeplace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="苏州"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="所在专业："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_major"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="移动应用开发"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="爱好："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_hobby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="打游戏"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="手机号："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textColor="#0000ff"
                    android:textSize="15dp"
                    android:text="241414"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="宿舍号："
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentDataActivity_dormitoryid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textColor="#666"
                    android:textSize="15dp"
                    android:text="1-101"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>